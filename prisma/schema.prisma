generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  username     String
  email        String @unique
  password     String
  profilePhoto String?

  // Videos uploaded by the user
  videos Video[]

  // Videos viewed by the user
  // viewedVideos Video[] @relation("ViewedVideos")

  // Subscription relationships
  subscribers  Subscriber[] @relation("SubscriberToUser")
  subscribedTo Subscriber[] @relation("UserToSubscriber")

  // Likes relationships
  likes Like[]

  playlists Playlist[]

  watchLater WatchLater?

  commment Comment[]

  commentLikes CommentLike[]

  watchHistory WatchHistory?
}

model View {
  id      Int @id @default(autoincrement())
  videoId Int

  video Video @relation(fields: [videoId], references: [id])

  @@index([videoId])
}

model Subscriber {
  subscriberId   Int
  subscribedToId Int
  createdAt      DateTime @default(now())

  subscriber   User @relation("UserToSubscriber", fields: [subscriberId], references: [id])
  subscribedTo User @relation("SubscriberToUser", fields: [subscribedToId], references: [id])

  @@id([subscriberId, subscribedToId])
}

model Video {
  id          Int      @id @default(autoincrement())
  duration    Int
  thumbnail   String
  title       String
  description String
  isShort     Boolean  @default(false)
  createdAt   DateTime @default(now())

  // User who uploaded the video
  uploader   User @relation(fields: [uploaderId], references: [id])
  uploaderId Int

  // Users who viewed the video
  // viewedBy User[] @relation("ViewedVideos")

  views View[]

  // Likes relationship
  likes Like[]

  // Playlist relationship
  playlists Playlist[]

  watchLater WatchLater[]

  comments Comment[]

  tags Tag[]

  watchHistories WatchHistoryVideo[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  videos Video[]
}

model Like {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  videoId Int
  video   Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model CommentLike {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  commentId Int
  comment   Comment @relation(fields: [commentId], references: [id])

  @@unique([userId, commentId])
  @@index([userId, commentId])
}

model Playlist {
  id   Int    @id @default(autoincrement())
  name String

  videos Video[]
  user   User[]
}

model WatchLater {
  id Int @id @default(autoincrement())

  videos Video[]

  userId Int?  @unique
  user   User? @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  videoId Int?
  video   Video? @relation(fields: [videoId], references: [id])

  likes CommentLike[]

  subcomments   Comment[] @relation("CommentToSubcomment")
  commentId     Int?
  parentComment Comment?  @relation("CommentToSubcomment", fields: [commentId], references: [id])

  @@index([videoId])
  @@index([commentId])
}

model WatchHistory {
  id        Int      @id @default(autoincrement())
  watchedAt DateTime @default(now())

  videos WatchHistoryVideo[]

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model WatchHistoryVideo {
  id Int @id @default(autoincrement())

  watchHistoryId Int
  watchHistory   WatchHistory @relation(fields: [watchHistoryId], references: [id])

  videoId   Int
  video     Video    @relation(fields: [videoId], references: [id])
  watchedAt DateTime @default(now())

  @@unique([watchHistoryId, videoId])
  @@index([watchHistoryId, videoId])
}

